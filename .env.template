# Selira AI Environment Variables Template
# Copy to .env and fill in your actual values

# === AIRTABLE DATABASE ===
# New Selira database
AIRTABLE_BASE_ID_SELIRA=your_selira_base_id_here
AIRTABLE_TOKEN_SELIRA=your_selira_token_here

# Old Narrin database (for migration only)  
AIRTABLE_BASE_ID=your_narrin_base_id_here
AIRTABLE_TOKEN=your_narrin_token_here

# === AUTH0 AUTHENTICATION ===
AUTH0_DOMAIN=your-domain.auth0.com
AUTH0_CLIENT_ID=your_auth0_client_id
AUTH0_CLIENT_SECRET=your_auth0_client_secret
AUTH0_AUDIENCE=https://your-domain.auth0.com/api/v2/

# === AI MODELS ===  
# OpenRouter for AI chat
OPENROUTER_API_KEY=sk-or-v1-xxxxxxxxxxxxx

# === PAYMENTS ===
# New Stripe account for Selira
STRIPE_SECRET_KEY=sk_live_xxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxx

# === HOSTING ===
URL=https://selira.ai
NETLIFY_SITE_ID=your_netlify_site_id

# === OPTIONAL SERVICES ===
# Email services (SendGrid/Mailgun)
SENDGRID_API_KEY=SG.xxxxxxxxxxxxx
MAILGUN_API_KEY=key-xxxxxxxxxxxxx

# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Image hosting (Cloudinary)
CLOUDINARY_URL=cloudinary://xxxxxxxxxxxxx